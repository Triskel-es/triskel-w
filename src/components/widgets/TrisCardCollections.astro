---
import { getCollection } from 'astro:content';
import { Image } from '@astrojs/image/components';
const works = await getCollection('work');
---

<div class="flex min-h-min items-center justify-center">
  <div class="pt-5 grid grid-cols-2 gap-5 md:grid-cols-3 lg:grid-cols-5">
    {
      works.map((work) => (
        <div class="group relative rounded-b-2xl cursor-pointer items-center justify-center overflow-hidden transition-shadow hover:shadow-xl hover:shadow-black/30">
          <div class="w-720">
            <Image
              class="h-full w-full object-cover transition-transform duration-500 group-hover:rotate-3 group-hover:scale-125"
              src={work.data.image.src}
              format="jpeg"
              width={700}
              height={700}
              alt={work.data.image.alt}
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black group-hover:from-black/70 group-hover:via-black/60 group-hover:to-black/70" />
          <div class="absolute inset-0 flex translate-y-[80%] flex-col items-center justify-center px-9 text-center transition-all duration-500 group-hover:translate-y-0">
            <h1 class="mb-3 text-2xl font-bold text-white">{work.data.word} </h1>
            <button class="rounded-full bg-neutral-900 py-2 px-3.5 text-sm capitalize text-white shadow shadow-black/60">
              ver
            </button>
          </div>
        </div>
      ))
    }
  </div>
</div>
